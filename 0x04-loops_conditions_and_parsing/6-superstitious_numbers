#!/usr/bin/env bash
# Prints numbers and associated superstition

n=1
while [ $n -le 20 ]
do

        case $n in
                "4" )
                        echo $n
                        echo "bad luck from Chine" ;;
                "9" )
                        echo $n
                        echo "bad luck from Japan" ;;
                "17" )
                        echo $n
                        echo "bad luck from Italy" ;;
                * )
                        echo $n ;;
        esac
        n=$(( n+1 ))
done
